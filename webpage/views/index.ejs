<!DOCTYPE HTML>
<html>

<head>
    <meta charset=utf-8>
    <meta name="viewport" content="width=device-width">
    <title>Home</title>

    <link rel="stylesheet" href="/bootstrap/css/mdb.min.css" />
    <script src="/bootstrap/js/mdb.min.js"></script>

    <script></script>
</head>

<body>

    <!-- Nav bar -->
    <div class="p-3 text-center bg-white border-bottom">
        <div class="container">
            <div class="row align-items-center justify-content-between">

                <!-- Left elements -->
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <% if (session && session.email) { %>
                        <!-- Show sign out, watchlist, cart, and profile buttons -->
                        <form action="/signout" method="POST">
                            <button type="submit" class="border rounded py-1 px-3 nav-link">
                                <p class="d-none d-md-block mb-0">Sign out</p>
                            </button>
                        </form>
                        <% } else { %>
                            <!-- Show sign up and sign in buttons -->
                            <a href="/createAccount" class="border rounded py-1 px-3 nav-link d-inline-block">
                                <p class="d-none d-md-block mb-0">Sign up</p>
                            </a>
                            <a href="/login" class="border rounded py-1 px-3 nav-link d-inline-block">
                                <p class="d-none d-md-block mb-0">Sign in</p>
                            </a>
                            <% } %>
                </div>

                <!-- Centered title -->
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <h1>Film Recommender</h1>
                </div>

                <!-- Right elements -->
                <div class="col-lg-4 col-md-12 col-sm-12 text-end">
                    <% if (session && session.email) { %>
                        <!-- Show watchlist and profile buttons -->
                        <a href="/Watchlist" class="border rounded py-1 px-3 nav-link d-inline-block">
                            <p class="d-none d-md-block mb-0">Watchlist</p>
                        </a>
                        <a href="/Profile" class="border rounded py-1 px-3 nav-link d-inline-block">
                            <p class="d-none d-md-block mb-0">Profile</p>
                        </a>
                        <% } %>
                </div>
            </div>
        </div>
    </div>
    <!-- END nav bar -->


    <!-- Film carousel -->

    <% if (films.length > 0) { %>
        <ul>
          <% films.forEach((film, index) => { %>
            <li>
              <strong>Title:</strong> <%= film.primaryTitle %><br>
              <p></p>
              <!-- Add more film details as needed -->
            </li>
          <% }); %>
        </ul>
      <% } else { %>
        <p>No films found.</p>
      <% } %>

    <!-- END film carousel -->


</body>

</html>