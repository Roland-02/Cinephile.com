<!DOCTYPE HTML>
<html>

<head>
    <meta charset=utf-8>
    <meta name="viewport" content="width=device-width">
    <title>Home</title>

    <link rel="stylesheet" href="/bootstrap/css/mdb.min.css" />
    <script src="/bootstrap/js/mdb.min.js"></script>
    <script src="/scripts/index.js"></script>

</head>

<body>

    <!-- Nav bar -->
    <div class="py-1 text-center bg-white border-bottom">
        <div class="container">
            <div class="row align-items-center justify-content-between">

                <!-- Left elements -->
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <% if (session && session.email) { %>
                        <!-- sign in button -->
                        <form action="/signout" method="POST">
                            <button type="submit" class="border rounded nav-link d-inline-block">
                                <p class="btn mb-0">Sign out</p>
                            </button>
                        </form>

                        <% } else { %>
                            <!-- sign up and sign in buttons -->
                            <a href="/createAccount" class="border rounded nav-link d-inline-block">
                                <p class="btn d-md-block mb-0">Sign up</p>
                            </a>
                            <a href="/login" class="border rounded nav-link d-inline-block">
                                <p class="btn d-md-block mb-0">Sign in</p>
                            </a>
                            <% } %>
                </div>

                <!-- Centered title -->
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <h1>Film Recommender</h1>
                </div>

                <!-- Right elements -->
                <div class="col-lg-4 col-md-12 col-sm-12 text-end">
                    <% if (session && session.email) { %>
                        <!-- watchlist and profile buttons -->
                        <a href="/Recommend" class="border rounded nav-link d-inline-block">
                            <p class="btn d-md-block mb-0">Recommend</p>
                        </a>
                        <a href="/Watchlist" class="border rounded nav-link d-inline-block">
                            <p class="btn d-md-block mb-0">Watchlist</p>
                        </a>
                        <a href="/Profile" class="border rounded nav-link d-inline-block">
                            <p class="btn d-md-block mb-0">My films</p>
                        </a>
                        <% } %>
                </div>
            </div>
        </div>
    </div>
    <!-- END nav bar -->


    <div class="container">
        <div class="row">

            <!-- Filters -->
            <div>

            </div>
            <!-- END filters -->


            <!-- Film carousel -->
            <div class="col-md-6 py-5 carousel-container">
                <div class="carousel slide" id="film-carousel" dta='<%- JSON.stringify(films) %>'
                    data-bs-ride="carousel">
                    <div class="d-flex align-items-center justify-content-center">

                        <!-- film poster -->
                        <div class="carousel-inner">
                            <div id="film-poster" class="carousel-item active">
                                <!-- Film poster will be displayed here -->
                            </div>
                        </div>

                        <!-- previous button -->
                        <button style="background-color: rgba(255, 255, 255, 0);" id="prev-btn"
                            class="carousel-control-prev" type="button" data-bs-target="#film-carousel"
                            data-bs-slide="prev">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="grey"
                                class="bi bi-caret-left-fill" viewBox="0 0 16 16">
                                <path
                                    d="m3.86 8.753 5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z" />
                            </svg>
                        </button>

                        <!-- next button -->
                        <button style="background-color: rgba(255, 255, 255, 0);" id="next-btn"
                            class="carousel-control-next" type="button" data-bs-target="#film-carousel"
                            data-bs-slide="next">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="grey"
                                class="bi bi-caret-right-fill" viewBox="0 0 16 16">
                                <path
                                    d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z" />
                            </svg>
                        </button>

                    </div>
                </div>
            </div>
            <!-- END film carousel -->


            <!-- Film info -->
            <div class="col-md-6 py-2">
                <div class="container">
                    <div class="col-md-12">
                        <div id="film-title" class="h3 text-center">
                            <!-- <!-- Film data displayed here from scripts/index.js -->


                            <strong>Film Title</strong><br>

                            <div class="small-text py-2 mb-2" style="max-height: 60px; overflow-y: auto;">
                                <p>aakhdakjdjkansdjansd</p>
                            </div>


                            <div class="row d-flex">

                                <div class="col-md border border-3 mx-3">
                                    <div class="h5 mb-3 border-bottom">RATING</div>
                                    <div class="p text-center">7.5</div>
                                </div>

                                <div class="col-md border border-3 mx-3">
                                    <div class="h5 mb-1 border-bottom">GENRE</div>
                                    <div class="list-unstyled" style="font-size: 18px;">
                                        <li>drama</li>
                                        <li>action</li>
                                        <li>comedy</li>
                                    </div>
                                </div>

                                <div class="col-md border border-3 mx-3">
                                    <div class="h5 mb-3 border-bottom">RUNTIME</div>
                                    <div class="p text-center">2h 34m</div>
                                    <p></p>
                                </div>

                                <div class="col-md border border-3 mx-3">
                                    <div class="h5 mb-3 border-bottom">RELEASE</div>
                                    <div class="p text-center">2012</div>
                                    <p></p>
                                </div>

                            </div>


                            <div class="col-md-12 py-3">
                                <div class="h5 text-center">CAST</div>
                                <div class="container px-0">
                                    <div class="d-flex justify-content-center">

                                        <div class="actor d-flex align-items-center">
                                            <span class="px-1">|</span>
                                            <span class="medium-text"> Anne Hathaway </span>
                                            <span class="px-1">|</span>
                                        </div>

                                        <div class="actor d-flex align-items-center">
                                            <span class="px-1">|</span>
                                            <span class="medium-text"> Christian Bale </span>
                                            <span class="px-1">|</span>
                                        </div>

                                        <div class="actor d-flex align-items-center">
                                            <span class="px-1">|</span>
                                            <span class="medium-text"> Tom Hardy </span>
                                            <span class="px-1">|</span>
                                        </div>

                                        <div class="actor d-flex align-items-center">
                                            <span class="px-1">|</span>
                                            <span class="medium-text"> Michael Caine </span>
                                            <span class="px-1">|</span>
                                        </div>

                                        <div class="actor d-flex align-items-center">
                                            <span class="px-1">|</span>
                                            <span class="medium-text"> Gary Oldman </span>
                                            <span class="px-1">|</span>
                                        </div>

                                        <div class="actor d-flex align-items-center">
                                            <span class="px-1">|</span>
                                            <span class="medium-text"> Morgan Freeman </span>
                                            <span class="px-1">|</span>
                                        </div>

                                        <div class="actor d-flex align-items-center">
                                            <span class="px-1">|</span>
                                            <span class="medium-text"> Joseph Gordon-Levitt </span>
                                            <span class="px-1">|</span>
                                        </div>

                                    </div>
                                </div>
                            </div>


                            <div class="row d-flex py-2">

                                <div class="col-sm border border-3 mx-3">
                                    <div class="h5 mb-3 border-bottom">DIRECTOR</div>
                                    <div class="p medium-text text-center">Christopher Nolan</div>
                                </div>

                                <div class="col-sm border border-3 px-3">
                                    <div class="h5 mb-3 border-bottom">CINEMATOGRAPHER</div>
                                    <div class="p medium-text text-center">Wally Pfister</div>
                                    <p></p>
                                </div>

                                <div class="col-sm border border-3 mx-3">
                                    <div class="h5 mb-1 border-bottom">WRITER</div>
                                    <div class="list-unstyled" style="font-size: 16px;">
                                        <li>Jonathan Nolan</li>
                                        <li>Christopher Nolan</li>
                                        <li>David S. Goyer</li>
                                    </div>
                                </div>

                            </div>


                            <div class="row d-flex py-4">

                                <div class="col-sm border border-3 mx-3">
                                    <div class="h5 mb-3 border-bottom">PRODUCER</div>
                                    <div class="p medium-text text-center">Christopher Nolan</div>
                                </div>

                                <div class="col-sm border border-3 px-3">
                                    <div class="h5 mb-3 border-bottom">EDITOR</div>
                                    <div class="p medium-text text-center">Wally Pfister</div>
                                    <p></p>
                                </div>

                                <div class="col-sm border border-3 mx-3">
                                    <div class="h5 mb-1 border-bottom">COMPOSER</div>
                                    <div class="list-unstyled" style="font-size: 16px;">
                                        <li>Jonathan Nolan</li>
                                        <li>Christopher Nolan</li>
                                        <li>David S. Goyer</li>
                                    </div>
                                </div>

                            </div>

                            <div class="row d-flex py-2">

                                <div class="col-md-6 text-end">

                                    <!--heart filled-->
                                    <div class="btn" style="background: transparent;">
                                         <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48"
                                        class="bi bi-heart-fill" viewBox="0 0 16 16">
                                        <path
                                            d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314" />
                                    </svg>
                                    </div>
                                   

                                    <!--heart blank-->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" class="bi bi-heart"
                                        viewBox="0 0 16 16">
                                        <path
                                            d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15" />
                                    </svg>

                                </div>

                                
                                <div class="col-md-6 text-start">

                                    <!--watchlist filled-->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48"
                                        class="bi bi-plus-square-fill" viewBox="0 0 16 16">
                                        <path
                                            d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0" />
                                    </svg>

                                    <!--watchlist blank-->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48"
                                        class="bi bi-plus-square" viewBox="0 0 16 16">
                                        <path
                                            d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                                        <path
                                            d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                                    </svg>

                                </div>


                            </div>



                        </div>
                    </div>
                    <!-- END film info -->


                </div>
            </div>

</body>



</html>