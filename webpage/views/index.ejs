<!DOCTYPE HTML>
<html>

<head>
    <meta charset=utf-8>
    <meta name="viewport" content="width=device-width">
    <title>Home</title>

    <link rel="stylesheet" href="/bootstrap/css/mdb.min.css" />
    <script src="/bootstrap/js/mdb.min.js"></script>
    <script src="/scripts/index.js"></script>
</head>

<body>

    <!-- Nav bar -->
    <div class="p-3 text-center bg-white border-bottom">
        <div class="container">
            <div class="row align-items-center justify-content-between">

                <!-- Left elements -->
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <% if (session && session.email) { %>
                        <!-- sign in button -->
                        <form action="/signout" method="POST">
                            <button type="submit" class="border rounded py-1 px-3 nav-link">
                                <p class="d-none d-md-block mb-0">Sign out</p>
                            </button>
                        </form>

                        <% } else { %>
                            <!-- sign up and sign in buttons -->
                            <a href="/createAccount" class="border rounded py-1 px-3 nav-link d-inline-block">
                                <p class="d-none d-md-block mb-0">Sign up</p>
                            </a>
                            <a href="/login" class="border rounded py-1 px-3 nav-link d-inline-block">
                                <p class="d-none d-md-block mb-0">Sign in</p>
                            </a>
                            <% } %>
                </div>

                <!-- Centered title -->
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <h1>Film Recommender</h1>
                </div>

                <!-- Right elements -->
                <div class="col-lg-4 col-md-12 col-sm-12 text-end">
                    <% if (session && session.email) { %>
                        <!-- watchlist and profile buttons -->
                        <a href="/Recommend" class="border rounded py-1 px-3 nav-link d-inline-block">
                            <p class="d-none d-md-block mb-0">Recommend</p>
                        </a>
                        <a href="/Watchlist" class="border rounded py-1 px-3 nav-link d-inline-block">
                            <p class="d-none d-md-block mb-0">Watchlist</p>
                        </a>
                        <a href="/Profile" class="border rounded py-1 px-3 nav-link d-inline-block">
                            <p class="d-none d-md-block mb-0">My films</p>
                        </a>
                        <% } %>
                </div>
            </div>
        </div>
    </div>
    <!-- END nav bar -->


    <!-- Film carousel -->
    <div class="carousel" id="film-carousel" data='<%- JSON.stringify(films) %>'>
        <button id="prev-btn">Previous</button>
        <div id="current-film">
            <!-- films displayed here from scripts/index.js -->
        </div>
        <button id="next-btn">Next</button>
    </div>

    <!-- END film carousel -->
    
</body>



</html>